{
  "name": "backend-boilerplate",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "build": "tsc",
    "lint": "eslint src --ext .ts",
    "dev": "nodemon --watch src --ext ts --exec ts-node src/app.ts",
    "fix": "eslint --fix src",
    "start": "node build/app.js",
    "migrate": "ts-node -O '{\"module\":\"commonjs\"}' ./node_modules/knex/bin/cli.js migrate:latest --knexfile src/database/knexfile.ts",
    "seed": "ts-node -O '{\"module\":\"commonjs\"}' ./node_modules/knex/bin/cli.js seed:run --knexfile src/database/knexfile.ts",
    "test": "cucumber-js test/features/**/*.feature --require-module ts-node/register --require test/steps/**/*.ts --require test/support/**/*.ts --format progress"
  },
  "dependencies": {
    "bullmq": "^5.2.0",
    "cors": "^2.8.5",
    "dotenv": "^16.0.0",
    "express": "^4.18.2",
    "express-basic-auth": "^1.2.1",
    "express-rate-limit": "^6.7.0",
    "express-slow-down": "^1.0.0",
    "express-validator": "^7.3.0",
    "helmet": "^6.0.1",
    "ioredis": "^5.3.2",
    "jsonwebtoken": "^9.0.2",
    "kafkajs": "^2.2.4",
    "knex": "^2.5.1",
    "lodash": "^4.17.21",
    "moment": "^2.30.1",
    "multer": "^2.0.2",
    "objection": "^3.0.1",
    "pg": "^8.11.0",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "winston": "^3.8.2",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@cucumber/cucumber": "^9.6.0",
    "@eslint/js": "^9.39.1",
    "@types/chai": "^5.2.3",
    "@types/cors": "^2.8.19",
    "@types/dotenv": "^8.2.3",
    "@types/express": "^4.17.17",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/lodash": "^4.17.20",
    "@types/moment": "^2.11.29",
    "@types/multer": "^2.0.0",
    "@types/node": "^20.19.25",
    "@types/nodemon": "^1.19.6",
    "@types/pg": "^8.15.6",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.8",
    "axios": "^1.13.2",
    "chai": "^6.2.1",
    "eslint": "^9.39.1",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-prettier": "^5.5.4",
    "nodemon": "^3.1.10",
    "prettier": "^3.6.2",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.46.4"
  }
}
